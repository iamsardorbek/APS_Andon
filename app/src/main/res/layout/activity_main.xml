<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">


        <Button
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:background="@drawable/login_button"
            android:text="@string/choose_pult_login"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat"/>

        <TextView
            android:id="@+id/punkt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пульт 1"
            android:layout_weight="2"
            android:gravity="center"
            android:autofillHints=""
            android:textColor="#FFFFFF"
            android:textSize="25dp"/>

        <Button
            android:id="@+id/open_factory_condition"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/monitoring_button"
            android:text="@string/open_factory_cond_button"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat"/>

    </LinearLayout>

    <Button
        android:id="@+id/repair_btn"
        android:layout_weight="1.35"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/remont_button"
        android:text="Ремонт"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/quality_btn"
        android:layout_weight="1.35"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/otk_button"
        android:text="OTK"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/raw_btn"
        android:layout_height="wrap_content"
        android:layout_weight="1.35"
        android:layout_gravity="top"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/materials_button"
        android:text="Сырьё"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat"
        android:layout_width="match_parent"/>

    <Button
        android:id="@+id/master_btn"
        android:layout_height="wrap_content"
        android:layout_weight="1.35"
        android:layout_gravity="top"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/master_button"
        android:text="МАСТЕР"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat"
        android:layout_width="match_parent"/>

</LinearLayout>