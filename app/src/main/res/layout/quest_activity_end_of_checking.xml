<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/login_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestEndOfChecking">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/endOfChecking"
                android:layout_width="match_parent"
                android:textColor="@color/text"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/edit"
                android:text="@string/reviseDone" />

            <TextView
                android:id="@+id/shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/edit"
                android:text="@string/shop" />

            <TextView
                android:id="@+id/equipmentLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/edit"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="@string/equipmentLine" />

            <TextView
                android:id="@+id/numberOfProblems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/edit"
                android:text="@string/numberOfProblems"/>

            <TextView
                android:id="@+id/checkingDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/edit"
                android:text="@string/checkingDuration"/>

            <TextView
                android:id="@+id/furtherActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/edit"
                android:text="@string/nextSteps"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/newChecking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:layout_weight="1"
                    android:textColor="@color/text"
                    android:paddingLeft="10dp"
                    android:drawableLeft="@drawable/new_revise"
                    android:background="@drawable/edit"
                    android:text="@string/newRevision"
                    android:paddingStart="10dp"
                    android:drawableStart="@drawable/new_revise"
                    tools:ignore="ButtonStyle,RtlSymmetry" />

                <Button
                    android:id="@+id/closeApp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:background="@drawable/edit"
                    android:layout_weight="1"
                    android:textColor="@color/text"
                    android:paddingRight="10dp"
                    android:drawableRight="@drawable/cancel_app"
                    android:text="@string/exitApp"
                    android:paddingEnd="10dp"
                    tools:ignore="ButtonStyle,RtlSymmetry"
                    android:drawableEnd="@drawable/cancel_app" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>