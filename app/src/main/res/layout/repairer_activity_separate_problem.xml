<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".RepairerSeparateProblem">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:background="@drawable/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="@string/separate_problem_title"
                android:textSize="25sp"
                android:textColor="@color/text"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/repairerProblemShopName"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/shopName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/edit"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/repairerProblemMachineName"
                android:textColor="@color/text"
                android:textSize="18sp"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/machineName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:background="@drawable/edit"
                android:gravity="center"
                android:textColor="@color/text"
                android:textSize="18sp"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/repairerProblemStationNumber"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/stationNumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/edit"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/repairerProblemPointNumber"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/pointNumber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/edit"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/repairerProblemEmployeeName"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/employeeName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/repairerProblemTime"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/employeeNÑ„me"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@drawable/edit"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="18sp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/problemPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/aps_icon"
                android:contentDescription="@string/cameraViewDescription" />

            <Button
                android:id="@+id/takePic"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_red_accent"
                android:drawableRight="@drawable/camera_icon"
                android:textColor="@color/text"
                android:text="@string/take_pic"
                android:drawableEnd="@drawable/camera_icon"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                tools:ignore="RtlSymmetry" />

            <Button
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_red_accent"
                android:drawableRight="@drawable/ic_check_box_black_24dp"
                android:id="@+id/problemSolved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/text"
                android:text="@string/problem_solved"
                android:drawableEnd="@drawable/ic_check_box_black_24dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

</ScrollView>